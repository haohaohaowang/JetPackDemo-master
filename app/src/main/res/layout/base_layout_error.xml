<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_error"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_page_error"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginBottom="4dp"
        android:scaleType="centerInside"
        android:src="@drawable/base_page_empty_or_error" />

    <TextView
        android:id="@+id/tv_page_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/base_page_error"
        android:textColor="@color/base_page_tips"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/base_page_click_retry"
        android:textSize="14sp"
        android:textColor="@color/base_page_clickretry" />
</LinearLayout>
